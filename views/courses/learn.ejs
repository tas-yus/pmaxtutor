<% include ../partials/header %>
<div class="jumbotron intro-course">
  <div class="container">
    <div class="col-sm-6">
      <iframe class="intro-video" height="300" src="<%= course.video %>" frameborder="0" allowfullscreen></iframe>
    </div>
    <div class="col-sm-6">
      <h2>Learn <%= course.title %></h2>
      <% if (user.isAdmin) { %>
        <a class="btn btn-primary" href="/courses/<%= course.code %>/edit">Edit Course</a>
      <% } else { %>
        <a href="#" class="btn btn-lg btn-primary">เข้าดูคลิปที่ดูค้างไว้</a>
      <% } %>
      <p class="progress-caption"><%= user.numFinishedVideos %> of <%= course.numVideos%> items complete</p>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="<%= user.numFinishedVideos/course.numVideos*100 %>"
        aria-valuemin="0" aria-valuemax="100" style="width:<%= user.numFinishedVideos/course.numVideos*100 %>%">
          <span class="sr-only">70% Complete</span>
        </div>
      </div>
    </div>
  </div>
</div>

    <%- include("../partials/overview2", {checkPartOwnership, isFinished}) %>

<% include ../partials/footer %>
