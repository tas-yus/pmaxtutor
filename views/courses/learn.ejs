<% include ../partials/header %>
<div class="jumbotron intro-course">
  <div class="container">
    <div class="col-sm-6">
      <iframe class="intro-video" height="300" src="<%= course.video %>" frameborder="0" allowfullscreen></iframe>
    </div>
    <div class="col-sm-6">
      <h2>Learn <%= course.title %></h2>
      <% if (user.isAdmin) { %>
        <% numFinishedVideos = 0; %>
        <a class="btn btn-primary" href="/courses/<%= course.code %>/edit">Edit Course</a>
      <% } else { %>
        <% if (numFinishedVideos === course.numVideos) { %>
          <a href="#" class="btn btn-lg btn-primary">
            <%= course.title %> Completed!
          </a>
        <% } else if (user.mostRecentVideo) { %>
          <a href="/courses/<%= course.code %>/parts/<%= createCode(user.mostRecentVideo.part) %>/videos/<%= user.mostRecentVideo.code %>/learn" class="btn btn-lg btn-primary">
            ดู <%= user.mostRecentVideo.title %> ต่อ
          </a>
        <% } else { %>
          <a href="#" class="btn btn-lg btn-primary">เริ่มดูม้วนแรก</a>
        <% } %>
      <% } %>
      <p class="progress-caption"><%= numFinishedVideos %> of <%= course.numVideos%> items complete</p>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="<%= numFinishedVideos/course.numVideos*100 %>"
        aria-valuemin="0" aria-valuemax="100" style="width:<%= numFinishedVideos/course.numVideos*100 %>%">
          <span class="sr-only">70% Complete</span>
        </div>
      </div>
    </div>
  </div>
</div>
  <%- include("../partials/overview2", {checkPartOwnership, isFinished}) %>
<script src="/assets/js/accordion.js"></script>
<script src="/assets/js/overview.js"></script>
<% include ../partials/footer %>
