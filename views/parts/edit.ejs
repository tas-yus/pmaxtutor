<% include ../partials/header %>
    <h1 id="form-header">Edit <%= part.title %></h1>
        <form action="/<%= course.code %>/<%= part.code %>?_method=PUT" enctype="multipart/form-data" method="POST" id="regular-form">
            <div class="form-group">
                <input class="form-control" type="text" name="title" value="<%= part.title %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="price" value="<%= part.price %>">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="description"><%= part.description %><% part.description %></textarea>
            </div>
            <div class="form-group">
                <input type="file" name="file">
            </div>
            <button class="btn btn-primary btn-block">Add</button>
        </form>
<% include ../partials/footer %> 