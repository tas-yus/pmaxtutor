<% include ./partials/header %>
    <h1 id="form-header">Sign Up</h1>
    <form action="/register" method="POST" id="regular-form">
      <div class="form-group">
        <label>Username: </label>
        <input class="form-control" type="text" name="username" placeholder="username">
      </div>
      <div class="form-group">
        <label>Password: </label>
        <input class="form-control" type="password" name="password" placeholder="password">
      </div>
      <div class="form-group">
        <label>First Name: </label>
        <input class="form-control" type="text" name="firstName" placeholder="ชื่อ">
      </div>
      <div class="form-group">
        <label>Last Name: </label>
        <input class="form-control" type="text" name="lastName" placeholder="สกุล">
      </div>
      <div class="form-group">
        <label>Email: </label>
        <input class="form-control" type="text" name="email" placeholder="อีเมลล์">
      </div>
      <div class="form-group">
        <label>Phone: </label>
        <input class="form-control" type="number" name="phone" placeholder="มือถือ">
      </div>
      <div class="form-group">
        <label>School: </label>
        <input class="form-control" type="text" name="school" placeholder="โรงเรียน">
      </div>
      <div class="form-group">
        <label>Grade: </label><br>
        <select name="grade">
          <option value="">เลือกระดับชั้น</option>
          <option value="4">ป.4</option>
          <option value="5">ป.5</option>
          <option value="6">ป.6</option>
          <option value="7">ม.1</option>
          <option value="8">ม.2</option>
          <option value="9">ม.3</option>
          <option value="10">ม.4</option>
          <option value="11">ม.5</option>
          <option value="11">ม.6</option>
        </select>
      </div>
      <button class="btn btn-primary btn-block">Sign Up</button>
    </form>
<% include ./partials/footer %>
